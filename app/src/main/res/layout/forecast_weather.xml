<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@color/listviewcolor"
    android:padding="17dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/forecast_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <weatherapp.msi.com.weatherapp.CustomFonts.NumberFont
                android:id="@+id/forecast_day"
                android:text="No Data"
                android:textColor="@color/colorPrimary"
                android:textSize="15dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <weatherapp.msi.com.weatherapp.CustomFonts.NumberFont
                android:id="@+id/forecast_date"
                android:text="No Data"

                android:textColor="@color/colorAccent"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout

        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginLeft="25dp"
            android:layout_gravity="center"
            android:id="@+id/forecast_HighLow"
            android:src="@drawable/thermometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <weatherapp.msi.com.weatherapp.CustomFonts.NumberFont
                android:id="@+id/forecast_high"
                android:text="No Data"
                android:typeface="serif"
                android:textColor="@color/colorPrimary"
                android:textSize="17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <weatherapp.msi.com.weatherapp.CustomFonts.NumberFont
                android:id="@+id/forecast_low"
                android:text="No Data"
                android:typeface="serif"
                android:textColor="@color/colorPrimary"
                android:textSize="17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>